<div class="lside-title">
	<%= link_to user_path(current_user) do %>
		<div class="lside-content">
			<i class="fa fa-home" aria-hidden="true">ホーム</i>
		</div>
	<% end %>
</div>
<div class="lside-title">
	<%= link_to notifications_path do %>
		<div class="lside-content">
			<i class="fa fa-bell" aria-hidden="true">通知</i>
		</div>
	<% end %>
</div>
<div class="lside-title">
	<%= link_to edit_user_path(current_user) do %>
		<div class="lside-profile">
			<%= image_tag current_user.profile_image.url, :size => '30x30' %>プロフィール編集
		</div>
	<% end %>
</div>