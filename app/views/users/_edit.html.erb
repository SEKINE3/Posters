<div class="edit-title">プロフィール編集</div>
<%= form_for(current_user) do |f| %>
	<div class="edit-subtitle">名前</div>
	<div class="edit-content">
		<%= f.text_field :name %>
	</div>
	<div class="edit-subtitle">自己紹介</div>
	<div class="edit-content">
		<%= f.text_area :introduction, size: "30x5", class: "form-control"%>
	</div>
	<div class="edit-subtitle">プロフィール画像</div>
	<div class="edit-img">
		<%=f.label :profile_image do %>
			<i class="fas fa-image fa-2x"></i>
			<%= f.file_field :profile_image, class: "np-img" %>
		<% end %>
	</div>
	<div class="edit-btn">
		<input class="submit_button" type="submit" name="submit" value="更新する">
	</div>
<% end %>


