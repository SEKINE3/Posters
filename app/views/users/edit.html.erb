<div class="container">
	<div class="row">
		<div class="col-3">
			<%= render "shares/lside" %>
		</div>
		<div class="col-6">
			<div class="row">
				<div class="edit-title">プロフィール編集</div>
				<%= form_for(@user) do |f| %>
					<div class="edit-subtitle">名前</div>
					<div class="edit-content">
						<%= f.text_field :name %>
					</div>
					<div class="edit-subtitle">自己紹介</div>
					<div class="edit-content">
						<%= f.text_area :introduction, size: "30x5", class: "form-control"%>
					</div>
					<div class="edit-subtitle">プロフィール画像</div>
					<div class="edit-content">
						<%= f.file_field :profile_image %>
					</div>
					<input class="submit_button" type="submit" name="submit" value="更新する">
				<% end %>
			</div>
		</div>
		<div class="col-3">
			<%= render "shares/rside", user_ranking: @user_ranking, follow_follows: @follow_follows %>
		</div>
	</div>
</div>

