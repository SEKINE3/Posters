<%= params[:keyword] %>の検索結果
<div class="container">
	<div class="row">
		<div class="col-4 offset-6">
			<%= form_tag(post_search_path,method: :get, role:"search") do %>
		      <%= text_field_tag "keyword", "" %>
		    <% end %>
		</div>
		<div class="col-2">
			<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
		</div>
	</div>
	<div class="row">
		<div class="col-3">
			<%= link_to user_path(current_user) do %>
					<li>ホーム</li>
			<% end %>
			<%= link_to notifications_path do %>
				<i class="far fa-bell">通知</i>
			<% end %>
			<li><%= link_to edit_user_path(current_user) do %>
					プロフィール
				<% end %>
			</li>
			<li>投稿</li>
		</div>
<% @posts.each do |post| %>
	<%= image_tag post.user.profile_image.url %>
	<%= post.user.name %>
	<%= post.body %>
	<% if post.post_image.present? %>
		<%= image_tag post.post_image.url, :size=> '400x300' %>
	<% end %>
	<% if post.post_video.file.present? %>
		<%= video_tag post.post_video_url.to_s,autoplay: true, loop: true, controls: true, width: 300 %>
	<% end %>
<% end %>
<% @users.each do |user| %>
	<% user.name %>
<% end %>