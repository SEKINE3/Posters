<div class="ray">
</div>
<div class="sign-log">
  <div class="field">
    <h4>アカウント作成</h4>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <div class="label">名前</div>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <div class="label">メール</div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <div class="label">パスワード(<%= @minimum_password_length %>文字以上)</div>
        <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
        <div class="label">パスワード確認</div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <input class="submit_button" type="submit" name="submit" value="登録する">
    </div>
  <% end %>
  <div class="sign-link">
    <%= link_to "ログイン", new_user_session_path, :style=>"color: #FF6600" %>
  </div>
